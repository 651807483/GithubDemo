<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/MapFragment" >
    
    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" />
    <RelativeLayout 
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#FFFFFF">
        
         <EditText 
             android:id="@+id/search_view"
	        android:layout_height="match_parent"
	        android:layout_width="match_parent"
	        android:drawableLeft="@drawable/search_btn" 
	            
	         android:background="@drawable/shape" 
	        android:layout_marginRight="80dp"   
	        android:paddingTop="5dp"  
	        android:hint="@string/lizhi"  
	        android:singleLine="true"  
	        android:textColor="#000000"
	        android:layout_gravity="center"/>

		<Button
		    android:id="@+id/btn_search"
		    android:layout_width="80dp"
		    android:layout_height="match_parent"
		    android:layout_alignParentRight="true"
		    android:layout_alignParentTop="true"
		    android:background="#00FF00"
		    android:text="@string/search_btn"
		    android:onClick="true"
		    android:textColor="#FFFFFF"
		    android:textSize="20sp" />
        
    </RelativeLayout>
 
    
    <ImageButton
        android:id="@+id/location_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/location_normal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="54dp" 
        />
    <ImageButton
        android:id="@+id/map_switch_btn"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:background="@drawable/map_switch_button_m"       
        android:layout_alignParentRight="true"
        android:layout_marginTop="55dp"
        android:clickable="true"
        
        />

    <ImageButton
        android:id="@+id/show_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/location_button"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="14dp"
        android:background="#00000000"
        android:src="@drawable/logo" />
    
</RelativeLayout>
